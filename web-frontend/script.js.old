// üß† Button click handler
document.getElementById("predictBtn").addEventListener("click", async () => {
  const feedback = document.getElementById("feedbackInput").value.trim();
  if (!feedback) {
    alert("Please enter some feedback text.");
    return;
  }

  const resultDiv = document.getElementById("result");
  resultDiv.innerText = "‚è≥ Predicting...";

  try {
    const res = await fetch("http://127.0.0.1:5000/predict", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ feedback })
    });

    const data = await res.json();
    resultDiv.innerText = `üìÇ Predicted Category: ${data.prediction}`;
  } catch (err) {
    console.error(err);
    resultDiv.innerText = "‚ùå Error connecting to the server.";
  }
});
