rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // ML Models directory - read-only for Cloud Functions
    match /models/{modelFile} {
      // Allow Cloud Functions to read models
      allow read: if true;
      
      // Only admins can upload/update models
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // User uploads directory (if needed in future)
    match /uploads/{userId}/{fileName} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024  // 10MB limit
        && request.resource.contentType.matches('text/.*|application/json');
    }
    
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
