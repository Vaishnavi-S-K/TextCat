rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isValidPrediction(data) {
      return data.keys().hasAll(['text', 'category', 'timestamp']) 
        && data.text is string
        && data.text.size() >= 3
        && data.text.size() <= 5000
        && data.category is string
        && data.category in ['Bug Report', 'Feature Request', 'Pricing Complaint', 'Positive Feedback', 'Negative Experience'];
    }
    
    // Predictions collection
    match /predictions/{predictionId} {
      // Allow Cloud Functions to write (server-side)
      allow create: if true;  // Cloud Function writes with admin SDK
      
      // Read predictions (public for now - restrict in production)
      allow read: if true;
      
      // Update and delete only by authenticated admins
      allow update, delete: if isAuthenticated() && request.auth.token.admin == true;
    }
    
    // Analytics collection (for tracking metrics)
    match /analytics/{doc} {
      allow read, write: if isAuthenticated() && request.auth.token.admin == true;
    }
    
    // Health check collection
    match /_health_check/{doc} {
      allow read: if true;
      allow write: if false;
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
